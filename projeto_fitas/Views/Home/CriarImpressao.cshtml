<div class="container">
    <h2 class="text-dark">Criar Novo PDF</h2>

    <!-- Inputs -->
    <div class="row mt-4">
        <div class="col-md-3">
            <label class="text-dark" for="id_pedido">Pedido</label>
            <input type="number" class="form-control" id="id_pedido" name="NPedido">
