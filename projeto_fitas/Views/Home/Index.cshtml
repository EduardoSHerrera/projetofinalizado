@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/Login.css">
    <link rel="preconnect" href="https://fonts.googleapis.com%22%3E"/>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>Automação de Fita | Login</title>
</head>
<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorMessage" class="alert alert-danger" style="    
            width: 100vw;
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            position: relative;
            padding: 0.75rem 1.25rem;
            border: 1px solid transparent;
            box-sizing: border-box;" role="alert">
            @TempData["ErrorMessage"]
        </div>

        <script>
            // Seleciona o elemento da mensagem de erro
            var errorMessage = document.getElementById('errorMessage');

            // Define um temporizador para esconder a mensagem de erro após dois segundos
            setTimeout(function () {
                // Esconde a mensagem de erro
                errorMessage.style.display = 'none';
            }, 2000); // 2000 milissegundos = 2 segundos
        </script>
    }
    <div id="container">
        <div id="img-login"></div>
        <div id="div-warp-container">
            <div id="login-warp">
                <form method="post" action="/Home/Entrar">
                    <h5 style="margin-bottom: 50px;">AUTOMAÇÃO DE IMPRESSÃO</h5>
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username">
                    </div>
                    <br>

                    <div>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password">
                    </div> 

                    <br>
                    <br>
                    <br>
                    <br>


                    <div>

                    <div>
                        <button type="submit">ENTRAR</button>
                    </div>
                        <div style="margin-top: 50px">
                        <h3><a href="/Home/CadastroUsuario">Criar Conta</a></h3>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
